{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env ENV=local nest start --watch",
    "start:debug": "cross-env ENV=local nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:unit:ci": "pnpm test:unit --ci --colors",
    "test:unit:cov": "pnpm test:unit --coverage",
    "test:unit:watch": "pnpm test:unit --watch",
    "test:unit": "pnpm run test --config ./jest.unit.config.js",
    "test:e2e:ci": "pnpm test:e2e --ci --colors",
    "test:e2e:cov": "pnpm test:e2e --coverage",
    "test:e2e:full": "pnpm typeorm:db:e2e:drop && pnpm typeorm:db:e2e:create && pnpm test:e2e:cov",
    "test:e2e:watch": "pnpm test:e2e --watch",
    "test:e2e": "cross-env ENV=e2e pnpm run test --config ./jest.e2e.config.js",
    "typeorm:db:e2e:create": "dotenv -- cross-var cross-env ENV=e2e ts-node -r tsconfig-paths/register --project ./tsconfig.json ./node_modules/typeorm-extension/bin/cli.cjs -d ./datasource-cli.ts db:create --initialDatabase %DB_DATABASE%",
    "typeorm:db:e2e:drop": "dotenv -- cross-var cross-env ENV=e2e ts-node -r tsconfig-paths/register --project ./tsconfig.json ./node_modules/typeorm-extension/bin/cli.cjs -d ./datasource-cli.ts db:drop --initialDatabase %DB_DATABASE%",
    "seed:e2e": "cross-env ENV=e2e pnpm seed",
    "seed": "ts-node -r tsconfig-paths/register --project ./tsconfig.json ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./datasource-cli.ts",
    "typeorm:migration:run": "typeorm-ts-node-commonjs migration:run -d ./datasource-cli.ts",
    "typeorm:migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./datasource-cli.ts",
    "typeorm:migration:generate": "typeorm-ts-node-commonjs migration:generate -d ./datasource-cli.ts",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@nestjs/apollo": "^12.0.11",
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^12.0.11",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/typeorm": "^10.0.1",
    "axios": "^1.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "graphql": "^16.8.1",
    "lodash": "^4.17.21",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "typeorm-extension": "^3.2.0",
    "typeorm-transactional": "^0.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/lodash": "^4.14.202",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.1.1",
    "jest-mock": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "5.1.6"
  }
}
